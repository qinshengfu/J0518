<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SkuMapper">
	
	<!--表名 -->
	<sql id="tableName">
		"FT_SKU"
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		"GMT_CREATE",	
		"GMT_MODIFIED",	
		"USER_ID",	
		"PROD_ID",	
		"PROPERTIES",	
		"ORI_PRICE",	
		"PRICE",	
		"STOCKS",	
		"ACTUAL_STOCKS",	
		"PIC",	
		"SKU_NAME",	
		"PROD_NAME",	
		"VERSION",	
		"STATUS",	
		"IS_DELETE",	
		"SKU_ID"
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
			#{GMT_CREATE},	
			#{GMT_MODIFIED},	
			#{USER_ID},	
			#{PROD_ID},	
			#{PROPERTIES},	
			#{ORI_PRICE},	
			#{PRICE},	
			#{STOCKS},	
			#{ACTUAL_STOCKS},	
			#{PIC},	
			#{SKU_NAME},	
			#{PROD_NAME},	
			#{VERSION},	
			#{STATUS},	
			#{IS_DELETE},	
			#{SKU_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">

		/* 返回 主键ID*/
		<selectKey keyProperty="SKU_ID" order="BEFORE" resultType="java.lang.Integer">
			select FT_SKU_SEQ.NEXTVAL as SKU_ID from DUAL
		</selectKey>

		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			"SKU_ID" = #{SKU_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
			set 
			"SKU_ID" = "SKU_ID"
			where 
				"SKU_ID" = #{SKU_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			"SKU_ID" = #{SKU_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件 -->
					"USER_ID" LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					"PROD_ID" LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or
					"PROPERTIES" LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or
					"ORI_PRICE" LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or
					"STOCKS" LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')

				)
		</if>
		/*时间段搜索*/
		<if test="pd.lastStart != null and pd.lastStart != '' ">
			and "GMT_CREATE" &gt;= #{pd.lastStart}
		</if>
		<if test="pd.lastEnd!= null and pd.lastEnd != '' ">
			and "GMT_CREATE" &lt;= ( SELECT TO_CHAR(( SELECT to_date( #{pd.lastEnd}, 'yyyy-mm-dd' ) + 1 FROM dual ),
			'yyyy-mm-dd' ) FROM dual )
		</if>
		order by "GMT_CREATE" desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			"SKU_ID" in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>